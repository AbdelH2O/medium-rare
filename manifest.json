{
	"manifest_version": 3,
	"name": "Medium Rare",
	"version": "1.0.0",
	"action": {
		"default_title": "Click to unlock Medium"
	},
	"icons": {
		"16": "public/meat-16.png",
		"32": "public/meat-32.png",
		"48": "public/meat-48.png",
		"128": "public/meat-128.png"
	},
	"permissions": [
		"tabs",
		"scripting"
	],
	"background": {
		"service_worker": "src/main.ts"
	},
	"content_scripts": [
		{
			"js": [
				"src/content.ts"
			],
			"matches": [
				"https://*.medium.com/*",
				"https://medium.com/*"
			]
		}
	],
	"host_permissions": [
		"https://webcache.googleusercontent.com/*"
	]
}